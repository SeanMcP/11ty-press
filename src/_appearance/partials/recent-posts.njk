<div class="recent-posts">
    <h3>Recent posts</h3>
    <ol>
    {# Show the five more recent posts in reverse chronological order #}
    {% for post in collections.posts | reverse | jsSlice(0, 5) %}
        <li><a href="{{ post.url }}">{{ post.data.title }}</a></li>
    {% endfor %}
    </ol>
</div>